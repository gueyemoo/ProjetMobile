<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".ChoixCategorieExerciceActivity"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:text="Salut, que veux tu faire ?" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:id="@+id/maths"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:onClick="goMaths"
                android:src="@drawable/calculator" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcul"
                android:textSize="30dp"
                android:layout_marginBottom="25dp"></TextView>


            <ImageView
                android:id="@+id/quizz"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:onClick="goQuizz"
                android:paddingRight="10dp"
                android:src="@drawable/quiz" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:textSize="30dp"
                android:layout_marginBottom="25dp"></TextView>

            <ImageView
                android:id="@+id/langues"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:src="@drawable/worldwide"
                android:onClick="langues_click"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Langues"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginBottom="25dp"></TextView>


            <ImageView
                android:id="@+id/pendu"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:src="@drawable/controller"
                android:onClick="pendu_click" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendu"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginBottom="25dp"/>

            <ImageView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:src="@drawable/flag"
                android:onClick="pays_click" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pays"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>


    </ScrollView>


</LinearLayout>





